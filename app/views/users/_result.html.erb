<%= render 'layouts/flash' %>
<% if @stock %>
  <div class="card card-header rounded mb-3">
    <div class="row">
      <div class="col d-flex align-items-center">
        <strong class="mr-1">Symbol:</strong><%= @stock.ticker %>
      </div>
      <% if @stock.name %>
        <div class="col d-flex align-items-center">
          <strong class="mr-1">Name:</strong><%= @stock.name %>
        </div>
      <% end %>
      <div class="col d-flex align-items-center">
        <strong class="mr-1">Price:</strong><%= @stock.last_price %>
      </div>
      <% if current_user.can_track_stock?(@stock.ticker) %>
        <div class="col d-flex align-items-center">
          <%= link_to "Add Stock", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success btn-sm", method: :post %>
        </div>
      <% else %>
        <div class="badge badge-secondary">
          You are already tracking
          <% if !current_user.under_stock_limit? %>
            10 stocks
          <% end %>
          <% if current_user.stock_already_tracked?(@stock.ticker) %>
            this stock
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>