<%= render 'layouts/flash' %>
<% if @stock %>
  <div class="card card-header rounded mb-3">
    <div class="row">
      <div class="col">
        <strong>Symbol:</strong> <%= @stock.ticker %>
      </div>
      <% if @stock.name %>
        <div class="col">
          <strong>Name:</strong> <%= @stock.name %>
        </div>
      <% end %>
      <div class="col">
        <strong>Price:</strong> <%= @stock.last_price %>
      </div>
      <div class="col d-flex align-items-center">
        <%= link_to "Add Stock", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success", method: :post %>
      </div>
    </div>
  </div>
<% end %>