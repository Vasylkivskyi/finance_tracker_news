<%= render 'layouts/flash' %>
<% if @friends %>
  <ul class="list-group pb-2">
    <% @friends.each do |f| %>
      <li class="list-group-item">
        <div class="d-flex justify-content-between">
          <div class="col-9 d-flex align-items-center"><%= f.fullname %></div>
          <div class="col-3">
            <div class="row">
              <div class="col">
                <%= link_to "View", "#", class: "btn btn-link" %>
              </div>
              <div class="col">
                <% if current_user.not_friend?(f.id) %>
                  <%= link_to "Follow", friendships_path(friend: f), class: "btn btn-link", method: :post %>
                <% else %>
                  <%= link_to "Unfollow", friendship_path(f), class: "btn btn-link text-danger", method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>